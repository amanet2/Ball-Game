# usage: handlekill $victimid $shooterid
getres vn setnstate $1 name
getres vc setnstate $1 color
testresn $2 null getres sn setnstate $2 name
testresn $2 null getres sc setnstate $2 color
testresn $2 null getres sw setthing THING_PLAYER $2 weapon
testresn $2 null testres $sw 0 addcomi server echo $sn#$sc rocked $vn#$vc
testresn $2 null testres $sw 1 addcomi server echo $sn#$sc shot $vn#$vc with a pistol
testresn $2 null testres $sw 2 addcomi server echo $sn#$sc shotgunned $vn#$vc
testresn $2 null testres $sw 3 addcomi server echo $sn#$sc shot $vn#$vc with a rifle
testresn $2 null testres $sw 4 addcomi server echo $sn#$sc blew up $vn#$vc with a bazooka
testresn $2 null testres $sw 5 addcomi server echo $sn#$sc gave $vn#$vc the gloves
testresn $2 null testres $sv_gamemode $mode_deathmatch givepoint $2 500
testres $sv_gamemode $mode_virus setnstate $1 virus 1
testres $2 null addcomi server echo $vn#$vc exploded
getres hadflag setnstate $1 flag
setnstate $1 flag 0
testres $hadflag 1 getres newitemid getnewitemid
testres $hadflag 1 echo $newitemid
testres $hadflag 1 getres newitemx setthing THING_PLAYER $1 coordx
testres $hadflag 1 getres newitemy setthing THING_PLAYER $1 coordy
testres $hadflag 1 exec scripts/putflag $newitemid $newitemx $newitemy
getaddlong respawntime $gametimemillis $respawnwaittime
addevent $respawntime exec scripts/respawnnetplayer $1
